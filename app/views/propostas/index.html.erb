<% content_for :title do %>
  POP | Propostas
<% end %>
<br>
<br>
<br>
<div class = "row">
<div class="col-md-offset-4 col-md-4">
<h1><%= button_to( 'Nova Proposta',  new_proposta_path , :class => 'btn btn-warning center-block', :method => :get, id: "botaoNovaProposta") %><h1>
</div>
</div>
<br>
<br>
<div class = "row">
	<div id="propostas-table" class= "col-sm-4 col-sm-offset-4 propostas-table"></div>
</div>	

<div class = "row">
	<div class= "col-md-offset-4 col-md-4">
		<p class="pagination">
			<%= paginate @list %>
		</p> 
	</div>
</div>	









<script>
	// Append new data
	$("<%=j render(:partial => 'propostas', :object => @list) %>")
	.appendTo($(".propostas-table"));

	// Update pagination link
	<% if @list.last_page? %>
	  $('.pagination').html("Fim!");
	<% end %>


</script>

