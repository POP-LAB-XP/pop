<div id="TituloNovaProposta" class="textoEstaticoNovaProposta">
	Nova Proposta
</div>

<%= form_for @proposta, url: propostas_path(@proposta), html: { method: :post } do |f| %>
	<div class="form-group">
	    <div class="col-sm-4 col-sm-offset-4">
	      <%= f.text_field :descricao, :placeholder => "Descrição", :autofocus => true, class: 'form-control' %>
	    </div>
	</div>

  	<div class="form-group">
	      <div class="col-sm-4 col-sm-offset-4">
	      	<%= f.collection_select(:tema_1_id, @lista_temas, :id, :nome) %>
	      </div> 
	</div>

  	<div class="form-group">
	      <div class="col-sm-4 col-sm-offset-4">
	      	<%= f.collection_select(:tema_2_id, @lista_temas, :id, :nome) %>
	      </div> 
	</div>

	<div class="form-group">
	    <div class="col-sm-4 col-sm-offset-4">
	      <%= f.text_field :palavra_chave, :placeholder => "Palavra-chave", :autofocus => true, class: 'form-control' %>
	    </div>
	</div>

	  <div class="form-group">
	    <div class="col-sm-offset-4 col-sm-4">
		  <%= f.submit "Criar", :class => "btn btn-warning center-block" %>
	    </div>
	  </div>

<% end %>


