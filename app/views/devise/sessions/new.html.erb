<div id="login">

	<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
	  
	  <div>
	  	<%= f.email_field :email, :placeholder => "e-mail", :autofocus => true %>
	  </div>

	  <div>
	  	<%= f.password_field :password, :placeholder => "senha" %>
	  </div>

	  <% if devise_mapping.rememberable? -%>
	    <div>
	    	<%= f.check_box :remember_me %> <%= f.label "Mantenha-me conectado" %>
	    </div>
	  <% end -%>

	  <div>
	  	<div class="col-md-12"><%= f.submit "entra", :class => "btn btn-lg btn-warning" %></div>
	  </div>

	  <div>
	  	<%= link_to "cadastro", new_registration_path(resource_name), :class => "btn btn-lg btn-default" %>
	  </div> 

	  <div>
	  	<%= link_to "termos de uso", "", :class => "btn btn-lg btn-default" %>
	  </div> 

	<% end %>
</div>
