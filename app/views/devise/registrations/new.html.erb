<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.email_field :email, :placeholder => "e-mail", :autofocus => true %></div>

  <div><%= f.password_field :password, :placeholder => "senha" %></div>

  <div><%= f.password_field :password_confirmation, :placeholder => "confirmar senha" %></div>

  <div><%= f.submit "Cadastrar", :class => "btn btn-lg btn-warning"  %></div>
<% end %>


